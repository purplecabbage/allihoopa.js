{
    "compilerOptions": {
        "declaration": false,
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "outDir": "lib",
        "experimentalDecorators": true,
        "types": [
            "jasmine"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}